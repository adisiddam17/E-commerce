    <div class="form-group row">
      <label for="staticEmail" class="col-sm-2 col-form-label">Id</label>
      <div class="col-sm-10">
        <input type="number"  class="form-control-plaintext" id="staticEmail" name="id" value="@e.Id">
      </div>
    </div>
    <div class="form-group row">
        <label for="staticEmail" class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
          <input type="text"  class="form-control-plaintext" name="name" id="staticEmail" value="@e.Name">
        </div>
      </div>
      <div class="form-group row">
        <label for="staticEmail" class="col-sm-2 col-form-label">Basic Salary</label>
        <div class="col-sm-10">
          <input type="number"  class="form-control-plaintext" name="basicSal" id="staticEmail" value="@e.BasicSal">
        </div>
      </div>
      <div class="form-group row">
        <label for="staticEmail" class="col-sm-2 col-form-label">Daily Allowance</label>
        <div class="col-sm-10">
          <input type="number"  class="form-control-plaintext" name="dailyAllo" id="staticEmail" value="@e.DailyAllo">
        </div>
      </div>
      <div class="form-group row">
        <label for="staticEmail" class="col-sm-2 col-form-label">Tax</label>
        <div class="col-sm-10">
          <input type="number"  class="form-control-plaintext" name="tax" id="staticEmail" value="@e.Tax">
        </div>
      </div>
      <div class="form-group row">
        <label for="staticEmail" class="col-sm-2 col-form-label">No. of working days</label>
        <div class="col-sm-10">
          <input type="number"  class="form-control-plaintext" name="nowd" id="staticEmail" value="@e.NoOfWorkingDays">
        </div>
      </div>
      <button type="submit">Update</button>
  </form>
